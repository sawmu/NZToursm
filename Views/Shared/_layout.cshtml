<!DOCTYPE html>
<html lang="en">
<head>
  <title>@(ViewData["Title"] ?? "Explore New Zealand") · Tourism</title>

<meta name="description" content="@(ViewData["Description"] ?? "Discover top New Zealand destinations, activities, and travel ideas.")" />
<meta name="keywords" content="@(ViewData["Keywords"] ?? "New Zealand, tourism, destinations, travel, hiking, beaches, museums")" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- Open Graph -->
<meta property="og:title" content="@(ViewData["Title"] ?? "Explore New Zealand") · Tourism" />
<meta property="og:description" content="@(ViewData["Description"] ?? "Discover top New Zealand destinations, activities, and travel ideas.")" />
<meta property="og:type" content="website" />
<meta property="og:url" content="@(Context?.Request?.Scheme + "://" + Context?.Request?.Host + Context?.Request?.Path)" />
<meta property="og:image" content="@(ViewData["OgImage"] ?? Url.Content("~/img/og-default.jpg"))" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content="@(ViewData["Title"] ?? "Explore New Zealand") · Tourism" />
<meta name="twitter:description" content="@(ViewData["Description"] ?? "Discover top New Zealand destinations, activities, and travel ideas.")" />
<meta name="twitter:image" content="@(ViewData["OgImage"] ?? Url.Content("~/img/og-default.jpg"))" />

<!-- Canonical -->
<link rel="canonical" href="@(Context?.Request?.Scheme + "://" + Context?.Request?.Host + Context?.Request?.Path)" />

<!-- Styles -->
<link rel="icon" href="~/favicon.ico" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

  

</head>
<body>
  <header class="site-header">
    <div class="container">
      <a class="brand" asp-controller="Destinations" asp-action="Index">Explore New Zealand</a>
      <nav>
        <a asp-controller="Destinations" asp-action="Index">Destinations</a>
      </nav>
    </div>
  </header>

  <main class="container">
    @RenderBody()
  </main>

  <footer class="footer container">
    <p>© @DateTime.Now.Year Explore New Zealand</p>
  </footer>

  <script src="~/js/gallery.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>
